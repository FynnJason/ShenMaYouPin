<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_5">

        <TextView
            android:id="@+id/tv_store_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/attr_red_left_backgroud_seleted"
            android:padding="@dimen/dp_5"
            android:text="产品商城"
            android:textColor="@color/white_to_red" />

        <TextView
            android:id="@+id/tv_store_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/attr_red_right_backgroud_seleted"
            android:padding="@dimen/dp_5"
            android:text="积分商城"
            android:textColor="@color/white_to_red" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/store_contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</LinearLayout>